<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RedFrogs.Views.EventsPage"
             NavigationPage.HasBackButton="False">

    <ContentPage.ToolbarItems>
      <ToolbarItem x:Name="newEventBtn" Text="+" />
        <ToolbarItem x:Name="deleteBtn" Text="X" />
    </ContentPage.ToolbarItems>
  

    <ContentPage.Content>
        <StackLayout>
            <ListView x:Name="EventsList"  SeparatorVisibility="Default" SeparatorColor="Black" ItemSelected="EventSelected">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell Height="45">
                            <ViewCell.View>
                                <StackLayout Orientation="Horizontal" Padding="20,15,0,0">
                                    <Label Text="{Binding EventName}" FontSize="Medium"/>
                                </StackLayout>
                            </ViewCell.View>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>

</ContentPage>