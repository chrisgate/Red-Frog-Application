<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RedFrogs.Views.DashboardPage">
  <ContentPage.ToolbarItems>
    <ToolbarItem x:Name="add" Text="+" />
  </ContentPage.ToolbarItems>

  <ListView x:Name="caseList" HasUnevenRows="False" SeparatorColor="Black" ItemSelected="Client_ItemSelected">
    <ListView.ItemTemplate>
      <DataTemplate>
        <ViewCell>
          <StackLayout Orientation="Horizontal" Margin="10, 5, 10, 0">
            <Label Text="{Binding PersonName}" FontSize="Medium" HorizontalOptions="StartAndExpand"/>
            <Label Text="{Binding SymptomName}" FontSize="Medium" HorizontalOptions="CenterAndExpand" />
            <Label Text="{Binding Colour}" FontSize="Medium" HorizontalOptions="EndAndExpand" />
          </StackLayout>
        </ViewCell>
      </DataTemplate>
    </ListView.ItemTemplate>    
  </ListView>  
</ContentPage>
