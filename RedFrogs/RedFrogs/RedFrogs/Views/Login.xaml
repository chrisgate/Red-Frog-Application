<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             NavigationPage.HasNavigationBar="False"
             x:Class="RedFrogs.Views.Login"> 
    <ContentPage.Content>
         
        <AbsoluteLayout>
 
            <StackLayout AbsoluteLayout.LayoutFlags="All" AbsoluteLayout.LayoutBounds="0,0,1,1">

                <StackLayout Orientation="Horizontal" VerticalOptions="Center" HorizontalOptions="Center">
                    <Label x:Name="Loginlable" VerticalOptions="Center" HorizontalOptions="Center"
               Margin="0, 35, 0, 5" FontSize="36" FontAttributes="Bold" TextColor="Black"/>
                </StackLayout>

                <StackLayout VerticalOptions="CenterAndExpand">

                    <Image Source="icon.jpg"/>
                    <Entry x:Name="username" Placeholder="Username" Margin="0, 0, 0, 5">
                        
                    </Entry>
                    <Entry x:Name="password" Placeholder="Password" IsPassword="True" Margin="0, 0, 0, 5" >
                        
                    </Entry>

                    <Button x:Name="login" Margin="15, 0, 15, 0" TextColor="White"
                               Clicked="Login_Clicked" BackgroundColor="Red" Text="Click to Log in!" />

                   
                </StackLayout>
 
            </StackLayout>
        </AbsoluteLayout>

    </ContentPage.Content>
</ContentPage>