<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RedFrogs.Views.LoginHandlePage">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout>
                <Image Source="account_circle" WidthRequest="80" HeightRequest="80" Margin="0,25,0,0" />
            </StackLayout>

            <StackLayout Orientation="Vertical" Margin="10, 0, 10, 0" VerticalOptions="CenterAndExpand">
                <Label Text="Enter your name" FontSize="Small" />
                <Entry x:Name="name" />
                <Label x:Name="TLUserPwd" FontSize="Small" Margin="0, 10, 0, 0" />
                <Entry x:Name="pwd" IsPassword="True"/>
                <Button TextColor="White" BorderRadius="10" BackgroundColor="#bf3336" Text="Log in"
                                Clicked="Login_Clicked" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>